<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KitapMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { display: flex; min-height: 100vh; flex-direction: column; }
        .wrapper { flex: 1; display: flex; }
        .sidebar { width: 250px; background-color: #343a40; color: #fff; padding-top: 20px; }
        .sidebar .nav-link { color: #fff; padding: 10px 15px; }
        .sidebar .nav-link:hover { background-color: #495057; }
        .content { flex-grow: 1; padding: 20px; background-color: #f8f9fa; }
        .footer { background-color: #e9ecef; padding: 10px; text-align: center; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="AdminDashboard" asp-action="Index">Admin Paneli</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Hoş Geldiniz, @User.Identity?.Name!</a> @* Giriş yapan kullanıcının adını gösterecek *@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <nav class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminKategoriler" asp-action="Index"><i class="bi bi-tags"></i> Kategoriler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminKitaplar" asp-action="Index"><i class="bi bi-book"></i> Kitaplar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminKullanicilar" asp-action="Index"><i class="bi bi-people"></i> Kullanıcılar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminSiparisler" asp-action="Index"><i class="bi bi-receipt"></i> Siparişler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminFavoriler" asp-action="Index"><i class="bi bi-heart"></i> Favoriler</a>
                </li>
                <li class="nav-item mt-auto">
                    @* Bunu en alta yapıştırır *@
                    <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Siteye Geri Dön</a>
                </li>
            </ul>
        </nav>
        <main role="main" class="content">
            @* TempData Bildirimleri Admin Panelinde de görünsün *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody() @* Sayfa içeriği buraya gelecek *@
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - Admin Paneli
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>