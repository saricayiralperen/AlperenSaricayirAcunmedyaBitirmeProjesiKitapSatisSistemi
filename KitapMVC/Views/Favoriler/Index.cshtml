@model List<KitapMVC.Models.Entities.Favori>
@{
    ViewData["Title"] = "Favorilerim";
}
<div class="container mt-5">
    <h1 class="mb-4">Favorilerim</h1>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Hiç favori kitabınız yok.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Kitap</th>
                    <th>Kullanıcı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Kitap?.Ad</td>
                        <td>@item.Kullanici?.AdSoyad</td>
                        <td>
                            <form asp-action="Sil" method="post">
                                <input type="hidden" name="favoriId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Kaldır</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-controller="Kitaplar" asp-action="Index" class="btn btn-outline-secondary">Kitaplara Göz At</a>
</div>