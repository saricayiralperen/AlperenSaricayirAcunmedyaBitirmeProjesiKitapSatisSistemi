@model KitapMVC.Models.KategoriViewModel
@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kategori Sil</h2>
<div class="alert alert-danger">Bu kategoriyi silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-2">Ad</dt>
    <dd class="col-sm-10">@Model.Ad</dd>
    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 