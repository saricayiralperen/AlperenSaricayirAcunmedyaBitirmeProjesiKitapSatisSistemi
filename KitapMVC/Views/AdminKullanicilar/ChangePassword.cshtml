@model KitapMVC.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-key"></i> Şifre Değiştir</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Kullanıcı Listesi
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-shield-lock"></i> Kullanıcı Şifre Değiştirme</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>@Model.KullaniciAd</strong> kullanıcısının şifresini değiştiriyorsunuz.
                </div>
                
                <form asp-action="ChangePassword" method="post">
                    @Html.HiddenFor(m => m.KullaniciId)
                    @Html.HiddenFor(m => m.KullaniciAd)
                    
                    <div class="mb-3">
                        <label asp-for="YeniSifre" class="form-label"></label>
                        <input asp-for="YeniSifre" class="form-control" placeholder="En az 6 karakter" />
                        <span asp-validation-for="YeniSifre" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="YeniSifreTekrar" class="form-label"></label>
                        <input asp-for="YeniSifreTekrar" class="form-control" placeholder="Yeni şifreyi tekrar girin" />
                        <span asp-validation-for="YeniSifreTekrar" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Uyarı:</strong> Şifre değiştirildikten sonra kullanıcının yeniden giriş yapması gerekecektir.
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-warning me-md-2">
                            <i class="bi bi-key"></i> Şifreyi Değiştir
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-lg"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}