@model IEnumerable<KitapMVC.Models.KullaniciViewModel>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kullanıcı Listesi</h2>


@if (TempData["DebugInfo"] != null)
{
    <div class="alert alert-warning">
        <strong>Controller Debug:</strong><br>
        @Html.Raw(TempData["DebugInfo"])
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Hata:</strong> @TempData["ErrorMessage"]
    </div>
}
<a class="btn btn-primary mb-3" asp-action="Create">Yeni Kullanıcı Ekle</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Kayıt Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.AdSoyad</td>
            <td>@item.Email</td>
            <td>@item.Rol</td>
            <td>@item.KayitTarihi</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>