@model IEnumerable<KitapMVC.Models.FavoriViewModel>

@{
    ViewData["Title"] = "Favoriler";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Favori Listesi</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı</th>
            <th>Kitap</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.KullaniciAd</td>
            <td>@item.KitapAd</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 