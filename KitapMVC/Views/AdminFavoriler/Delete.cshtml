@model KitapMVC.Models.FavoriViewModel

@{
    ViewData["Title"] = "Favori Sil";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Favori Sil</h2>
<div class="alert alert-danger">Bu favori kaydını silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-2">Kullanıcı</dt>
    <dd class="col-sm-10">@Model.KullaniciAd</dd>
    <dt class="col-sm-2">Kitap</dt>
    <dd class="col-sm-10">@Model.KitapAd</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 