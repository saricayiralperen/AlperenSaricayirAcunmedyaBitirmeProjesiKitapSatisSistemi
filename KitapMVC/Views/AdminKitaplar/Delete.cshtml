@model KitapMVC.Models.KitapViewModel

@{
    ViewData["Title"] = "Kitap Sil";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kitap Sil</h2>
<div class="alert alert-danger">Bu kitabı silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-2">Ad</dt>
    <dd class="col-sm-10">@Model.Ad</dd>
    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.Yazar</dd>
    <dt class="col-sm-2">Fiyat</dt>
    <dd class="col-sm-10">@Model.Fiyat.ToString("C")</dd>
    <dt class="col-sm-2">Kategori</dt>
    <dd class="col-sm-10">@Model.KategoriAd</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>