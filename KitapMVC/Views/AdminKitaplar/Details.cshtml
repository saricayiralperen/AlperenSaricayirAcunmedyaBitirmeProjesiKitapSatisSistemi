@model KitapMVC.Models.KitapViewModel

@{
    ViewData["Title"] = "Kitap Detay";
    Layout = "../Shared/_Layout.cshtml";
}
<h2>Kitap Detay</h2>
<dl class="row">
    <dt class="col-sm-2">Ad</dt>
    <dd class="col-sm-10">@Model.Ad</dd>
    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.Yazar</dd>
    <dt class="col-sm-2">Fiyat</dt>
    <dd class="col-sm-10">@Model.Fiyat.ToString("C")</dd>
    <dt class="col-sm-2">Kategori</dt>
    <dd class="col-sm-10">@Model.KategoriAd</dd>
    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>
    <dt class="col-sm-2">Resim</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ResimUrl))
        {
            <img src="@Model.ResimUrl" alt="@Model.Ad" class="img-thumbnail" style="max-width:200px;" />
        }
        else
        {
            <span>Resim yok</span>
        }
    </dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Geri</a>