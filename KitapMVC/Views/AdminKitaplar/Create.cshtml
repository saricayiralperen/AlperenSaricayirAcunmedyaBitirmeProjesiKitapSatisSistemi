@model KitapMVC.Models.KitapViewModel
@{
    ViewData["Title"] = "Yeni Kitap Ekle";
    Layout = "../Shared/_AdminLayout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Yeni Kitap Ekle</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Yazar" class="form-label"></label>
        <input asp-for="Yazar" class="form-control" />
        <span asp-validation-for="Yazar" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label"></label>
        <input asp-for="Fiyat" class="form-control" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KategoriId" class="form-label">Kategori</label>
        <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="KategoriId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label"></label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Kitap Resmi</label>
        <input type="file" name="ResimDosyasi" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>