@model KitapMVC.Models.RaporViewModel
@{
    ViewData["Title"] = "Raporlar";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-graph-up"></i> @ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Dashboard'a D繹n
        </a>
    </div>
</div>

<div class="row">
    <!-- 襤statistik Kartlar覺 -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Kitap
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamKitap</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-book display-4 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Toplam Kullan覺c覺
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamKullanici</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people display-4 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Bu Ay Sipari
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BuAySiparis</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-receipt display-4 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Toplam Kategori
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamKategori</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-tags display-4 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Grafik Alan覺 -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Ayl覺k Sipari Grafii</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Kategori Da覺l覺m覺 -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Kategori Da覺l覺m覺</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2" style="height: 400px;">
                    <canvas id="myPieChart" width="100%" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Kitap Sipari Leaderboard -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">En ok Sipari Edilen Kitaplar</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>S覺ra</th>
                                <th>Kitap Ad覺</th>
                                <th>Sipari</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.KitapSiparisIstatistikleri.Any())
                            {
                                @for (int i = 0; i < Math.Min(10, Model.KitapSiparisIstatistikleri.Count); i++)
                                {
                                    var kitap = Model.KitapSiparisIstatistikleri[i];
                                    <tr>
                                        <td>
                                            @if (i == 0)
                                            {
                                                <span class="badge bg-warning text-dark"></span>
                                            }
                                            else if (i == 1)
                                            {
                                                <span class="badge bg-secondary"></span>
                                            }
                                            else if (i == 2)
                                            {
                                                <span class="badge bg-warning"></span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-dark">@(i + 1)</span>
                                            }
                                        </td>
                                        <td class="text-truncate" style="max-width: 150px;" title="@kitap.KitapAd">@kitap.KitapAd</td>
                                        <td><span class="badge bg-primary">@kitap.ToplamSiparisSayisi</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Hen羹z sipari bulunmuyor</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Son Sipariler -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Son Sipariler</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sipari No</th>
                                <th>Kullan覺c覺</th>
                                <th>E-posta</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SonSiparisler.Any())
                            {
                                @foreach (var siparis in Model.SonSiparisler)
                                {
                                    <tr>
                                        <td>#@siparis.Id</td>
                                        <td>@siparis.Kullanici?.AdSoyad ?? "Bilinmeyen"</td>
                                        <td>@siparis.Kullanici?.Email ?? "Bilinmeyen Email"</td>
                                        <td>@siparis.SiparisTarihi.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            @if (siparis.Durum == "Tamamland覺")
                                            {
                                                <span class="badge bg-success">@siparis.Durum</span>
                                            }
                                            else if (siparis.Durum == "Beklemede")
                                            {
                                                <span class="badge bg-warning">@siparis.Durum</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@siparis.Durum</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Hen羹z sipari bulunmuyor</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Pop羹ler Kitaplar -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Pop羹ler Kitaplar</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @if (Model.PopulerKitaplar.Any())
                    {
                        @foreach (var kitap in Model.PopulerKitaplar)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                 <div>
                                     <h6 class="mb-1">@kitap.Ad</h6>
                                     <small>@kitap.Yazar</small>
                                 </div>
                                 <span class="badge bg-primary rounded-pill">@kitap.Fiyat.ToString("C")</span>
                             </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item text-center">
                            <small class="text-muted">Hen羹z kitap bulunmuyor</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .shadow {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // izgi Grafik
        var ctx = document.getElementById('myAreaChart').getContext('2d');
        var myAreaChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.AylikSiparisler.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    label: 'Sipariler',
                    data: [@Html.Raw(string.Join(",", Model.AylikSiparisler.Values))],
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderColor: 'rgba(78, 115, 223, 1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Pasta Grafik
        var ctx2 = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.KategoriDagilimi.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.KategoriDagilimi.Values))],
                    backgroundColor: [
                        '#4e73df',
                        '#1cc88a',
                        '#36b9cc',
                        '#f6c23e',
                        '#e74a3b',
                        '#858796',
                        '#5a5c69'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            }
        });
    </script>
}