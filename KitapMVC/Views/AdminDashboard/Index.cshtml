@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout"; // Admin paneli için özel layout'u kullan
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-controller="AdminDashboard" asp-action="Raporlar" class="btn btn-sm btn-outline-secondary"><i class="bi bi-graph-up"></i> Raporlar</a>
            <a asp-controller="AdminDashboard" asp-action="Ayarlar" class="btn btn-sm btn-outline-secondary"><i class="bi bi-gear"></i> Ayarlar</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-tags display-4"></i></h5>
                <p class="card-text">Kategori Yönetimi</p>
                <a asp-controller="AdminKategoriler" asp-action="Index" class="btn btn-primary">Git</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-book display-4"></i></h5>
                <p class="card-text">Kitap Yönetimi</p>
                <a asp-controller="AdminKitaplar" asp-action="Index" class="btn btn-primary">Git</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people display-4"></i></h5>
                <p class="card-text">Kullanıcı Yönetimi</p>
                <a asp-controller="AdminKullanicilar" asp-action="Index" class="btn btn-primary">Git</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-receipt display-4"></i></h5>
                <p class="card-text">Sipariş Yönetimi</p>
                <a asp-controller="AdminSiparisler" asp-action="Index" class="btn btn-primary">Git</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-heart display-4"></i></h5>
                <p class="card-text">Favoriler Yönetimi</p>
                <a asp-controller="AdminFavoriler" asp-action="Index" class="btn btn-primary">Git</a>
            </div>
        </div>
    </div>
</div>

@* İsteğe bağlı: Dashboard için ekstra içerik veya grafikler eklenebilir *@